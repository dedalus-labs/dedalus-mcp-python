{
  "license_mapping": {
    "mit": {
      "dirs": [
        "src",
        "tests",
        "examples",
        ".github/scripts"
      ]
    }
  },
  "exclude_patterns": [
    "**/venv/**",
    "**/.venv/**",
    "**/__pycache__/**",
    "**/build/**",
    "**/dist/**",
    "**/*.egg-info/**",
    "**/node_modules/**",
    "**/.git/**",
    "**/.pytest_cache/**",
    "**/.mypy_cache/**",
    "**/.ruff_cache/**",
    "**/.cache/**",
    "**/.uv-cache/**",
    "**/.uv_cache/**",
    "**/migrations/**",
    "**/htmlcov/**",
    "**/.coverage/**",
    "**/references/**",
    "**/internals/**"
  ],
  "exclude_files": [
    "__init__.py"
  ],
  "remove_shebangs": true
}
